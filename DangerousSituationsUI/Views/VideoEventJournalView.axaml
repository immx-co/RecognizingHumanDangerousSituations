<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:vm="using:DangerousSituationsUI.ViewModels"
			 xmlns:services="using:DangerousSituationsUI.Services"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DangerousSituationsUI.Views.VideoEventJournalView"
             x:DataType="vm:VideoEventJournalViewModel">

  <Grid>
	  
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="600"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <StackPanel Grid.Column="0">
      <ComboBox Width="600"
                HorizontalAlignment="Stretch"
                Margin="20, 13, 0, 13"
                ItemsSource="{Binding VideoItems}"
                SelectedItem="{Binding SelectedVideoItem}"/>
		<DataGrid Width="600"
			    Margin="20" 
		        ItemsSource="{Binding EventResults}"
			    SelectedItem="{Binding SelectedEventResult}"
		        AutoGenerateColumns="True" 
				IsReadOnly="True"
		        GridLinesVisibility="All"   
		        BorderThickness="1" 
	            BorderBrush="Gray"
				CanUserSortColumns="False"
				CanUserResizeColumns="True"
		        MaxHeight="600">
			    <DataGrid.Styles>
				    <Style Selector="DataGrid">
					    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
					    <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
				    </Style>
			    </DataGrid.Styles>
		</DataGrid>
		<Border Height="700"
							  Width="600">
        
      </Border>
    </StackPanel>

    <StackPanel Grid.Column="1"
								VerticalAlignment="Center"
								HorizontalAlignment="Center">
      <TextBlock Text="{Binding Title}"
								 Margin="0 0 0 10"/>
		<Grid Margin="0 0 0 10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="0.25*" />
				<ColumnDefinition Width="0.25*" />
				<ColumnDefinition Width="0.25*" />
				<ColumnDefinition Width="0.25*" />
			</Grid.ColumnDefinitions>

			<StackPanel Grid.Column="0" Margin="0 0 5 0">
				<Label>X:</Label>
				<TextBox Text="{Binding BoxX}" AcceptsReturn="False" IsReadOnly="True" />
			</StackPanel>
			<StackPanel Grid.Column="1" Margin="0 0 5 0">
				<Label>Y:</Label>
				<TextBox Text="{Binding BoxY}" AcceptsReturn="False" IsReadOnly="True" />
			</StackPanel>
			<StackPanel Grid.Column="2" Margin="0 0 5 0">
				<Label>Высота:</Label>
				<TextBox Text="{Binding BoxHeight}" AcceptsReturn="False" IsReadOnly="True" />
			</StackPanel>
			<StackPanel Grid.Column="3">
				<Label>Ширина:</Label>
				<TextBox Text="{Binding BoxWidth}" AcceptsReturn="False" IsReadOnly="True" />
			</StackPanel>
		</Grid>
      <Grid Width="800" Height="400">
        <Border Background="Gainsboro">
          <Image MaxWidth="800"
								 MaxHeight="400"
								 Source="{Binding CurrentImage}"
								 RenderOptions.BitmapInterpolationMode="HighQuality">
          </Image>
        </Border>
        <ItemsControl ItemsSource="{Binding RectItems}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Canvas>
				  <services:InteractiveBorder BorderBrush="{Binding Color}"
										BorderThickness="2"
										Width="{Binding Width}"
										Height="{Binding Height}"
										Canvas.Left="{Binding X}"
										Canvas.Top="{Binding Y}"
										Cursor="SizeAll"
										BorderMoved="InteractiveBorder_BorderMoved"
										BorderResized="InteractiveBorder_BorderResized">
					  <Canvas IsVisible="{Binding $parent.IsPointerOver}"
						Width="{Binding Width}"
						Height="{Binding Height}">
						  <!-- Верхний левый угол -->
						  <Rectangle Name="TopLeft" Width="10" Height="10" Fill="{Binding Color}" Cursor="TopLeftCorner"
									 Canvas.Left="0" Canvas.Top="0" PointerPressed="ResizeHandle_PointerPressed"/>

						  <!-- Верхний правый угол -->
						  <Rectangle Name="TopRight" Width="10" Height="10" Fill="{Binding Color}" Cursor="TopRightCorner"
									 Canvas.Right="0" Canvas.Top="0"/>

						  <!-- Нижний левый угол -->
						  <Rectangle Name="BottomLeft" Width="10" Height="10" Fill="{Binding Color}" Cursor="BottomLeftCorner"
									 Canvas.Left="0" Canvas.Bottom="0"/>

						  <!-- Нижний правый угол -->
						  <Rectangle Name="BottomRight" Width="10" Height="10" Fill="{Binding Color}" Cursor="BottomRightCorner"
									 Canvas.Right="0" Canvas.Bottom="0"/>
					  </Canvas>
				  </services:InteractiveBorder>
              </Canvas>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </Grid>
      <Grid Margin="0 10 0 0">
		  <Grid.ColumnDefinitions>
			  <ColumnDefinition Width="0.3*"/>
			  <ColumnDefinition Width="0.7*"/>
		  </Grid.ColumnDefinitions>
        <ListBox ItemsSource="{Binding LegendItems}" MaxWidth="200" Grid.Column="0">
          <ListBox.ItemTemplate>
            <DataTemplate>
              <StackPanel Orientation="Horizontal" Spacing="5">
                <Ellipse Width="15" Height="15" Fill="{Binding Color}"/>
                <TextBlock Text="{Binding ClassName}"/>
              </StackPanel>
            </DataTemplate>
          </ListBox.ItemTemplate>
        </ListBox>
		  <Button HorizontalAlignment="Stretch"
				VerticalContentAlignment="Center"
				HorizontalContentAlignment="Center"
				Content="Сохранить изменения"
				IsEnabled="{Binding BoxPositionChanged}"
				Command="{Binding SaveBoxPositionCommand}"
				Grid.Column="1">
		  </Button>
      </Grid>
    </StackPanel>
  </Grid>
  
</UserControl>

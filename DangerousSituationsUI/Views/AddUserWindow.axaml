<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:vm="using:DangerousSituationsUI.ViewModels"
        x:Class="DangerousSituationsUI.AddUserWindow"
        x:DataType="vm:AddUserViewModel"
        WindowStartupLocation="CenterScreen"
        Title="Новый пользователь"
        Width="400" Height="300">

    <StackPanel Margin="20" Spacing="10">
        <TextBox Watermark="Username" Text="{Binding Username}"/>
        <TextBox Watermark="Email" Text="{Binding Email}"/>
        <TextBox Watermark="Password" Text="{Binding Password}" PasswordChar="*"/>
        
        <CheckBox Content="Is Admin" IsChecked="{Binding IsAdmin}"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
            <Button Content="Save" Command="{Binding SaveCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>

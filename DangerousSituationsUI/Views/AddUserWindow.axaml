<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:DangerousSituationsUI"
        x:Class="DangerousSituationsUI.AddUserWindow"
        Title="Добавить пользователя"
        Width="400" Height="320"
        WindowStartupLocation="CenterOwner">
  
  <StackPanel Margin="10" Spacing="10">
    
    <TextBlock Text="Имя пользователя:" />
    <TextBox x:Name="NameBox" />

    <TextBlock Text="Email:" />
    <TextBox x:Name="EmailBox" />

    <TextBlock Text="Пароль:" />
    <TextBox x:Name="PasswordBox" />

    <CheckBox x:Name="IsAdminBox" Content="Администратор" />

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,10,0,0">
      <Button Content="Отмена" Click="OnCancelClick"/>
      <Button Content="Сохранить" Click="OnSaveClick"/>
    </StackPanel>
    
  </StackPanel>
  
</Window>

